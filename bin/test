#!/bin/bash

if [ -n "$1" -a "$1" == "coverage" ]; then
    source .venv-py2/bin/activate
    nosetests --with-coverage --cover-package=amulet --cover-tests
else
    echo "Python2 Testing"
    source .venv-py2/bin/activate
    nosetests
    echo "Python3 Testing"
    source .venv-py3/bin/activate
    nosetests3
fi


